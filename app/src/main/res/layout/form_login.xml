<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
android:background="@color/color1">

    <EditText android:hint="Email"
            android:layout_width="300dp" android:layout_height="50dp"
              android:background="@drawable/shape_button"
                                                      tools:ignore="MissingConstraints"
                                                      android:id="@+id/txtEmail"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      android:layout_marginEnd="8dp"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginStart="8dp" android:layout_marginTop="8dp"
                                                      app:layout_constraintTop_toTopOf="parent"/>

    <EditText android:hint="Password"  android:layout_width="300dp" android:layout_height="50dp"
                                                      tools:ignore="MissingConstraints"
              android:layout_marginTop="5dp"
              android:background="@drawable/shape_button"
                                                      android:id="@+id/txtPass"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginStart="8dp"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      android:layout_marginEnd="8dp"
                                                      app:layout_constraintTop_toBottomOf="@+id/txtEmail"
                                                      app:layout_constraintHorizontal_bias="0.505"
    />

    <ImageButton android:layout_width="52dp"
            android:layout_height="52dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/btnLoginWithFB"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnLoginWithEmail"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.8"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPass"
    android:src="@drawable/ic_fb"
                 android:scaleType="fitXY"
                 android:background="@drawable/shape_button"
    />

    <Button android:layout_width="231dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:text="@string/login_with_email"
            android:id="@+id/btnLoginWithEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPass" android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/shape_button"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:ignore="MissingConstraints"
              android:text="@string/forgot_password"
              app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
              android:layout_marginTop="44dp" app:layout_constraintTop_toBottomOf="@+id/btnLoginWithEmail"
    android:textColor="@color/common_google_signin_btn_text_dark_default"/>

</android.support.constraint.ConstraintLayout>