<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
android:background="@color/color1"
android:id="@+id/rootSignUp">
    <EditText android:hint="User Name"  android:layout_width="300dp" android:layout_height="50dp"
              tools:ignore="MissingConstraints"
              android:id="@+id/txtUserName"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp" android:layout_marginTop="8dp"
              android:background="@drawable/shape_button"
              app:layout_constraintTop_toTopOf="parent"/>

    <EditText android:hint="Email Address" android:layout_width="300dp" android:layout_height="50dp"
              tools:ignore="MissingConstraints"
              android:id="@+id/txtEmailAddress"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginTop="5dp"
              android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginEnd="8dp"
              app:layout_constraintTop_toBottomOf="@+id/txtUserName"
              android:background="@drawable/shape_button"
              app:layout_constraintHorizontal_bias="0.505"
    />
    <EditText android:hint="Password" android:layout_width="300dp" android:layout_height="50dp"
              tools:ignore="MissingConstraints"
              android:id="@+id/txtPassConfirm"
              app:layout_constraintStart_toStartOf="parent"
              android:layout_marginStart="8dp"
              app:layout_constraintEnd_toEndOf="parent"
              android:layout_marginTop="5dp"
              android:layout_marginEnd="8dp"
              app:layout_constraintTop_toBottomOf="@+id/txtEmailAddress"
              android:background="@drawable/shape_button"
              app:layout_constraintHorizontal_bias="0.505"
    />

    <ImageButton android:layout_width="52dp"
            android:layout_height="52dp"
            tools:ignore="MissingConstraints"
            android:id="@+id/btnSignUpWithFB"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/btnSignUpWithEmail"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.8"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassConfirm"
                 android:background="@drawable/shape_button"
                 android:src="@drawable/ic_fb"
                 android:scaleType="fitXY"/>

    <Button android:layout_width="231dp"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            android:background="@drawable/shape_button"
            android:text="@string/sign_up_with_email"
            android:id="@+id/btnSignUpWithEmail" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/txtPassConfirm" android:layout_marginEnd="52dp"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>